<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="@dimen/shadowSize"
        android:left="@dimen/shadowSize">
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:endColor="@color/colorGray"
                android:startColor="@color/colorGray" />
            <corners android:radius="@dimen/shadowSize" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/shadowSize"
        android:right="@dimen/shadowSize">
        <shape android:shape="rectangle">
            <solid android:color="?attr/myColorPrimary" />
            <corners android:radius="@dimen/shadowSize" />
        </shape>
    </item>
</layer-list>