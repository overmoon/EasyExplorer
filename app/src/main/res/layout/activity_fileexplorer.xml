<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FileExplorerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <View
        android:id="@+id/top_board"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/toolbar"
        android:background="#ffffff" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/top_board"
        android:scrollbars="none" />

    <View
        android:id="@+id/bottom_board"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@id/recyclerView_horizontal"
        android:background="#ffffff" />

    <ListView
        android:id="@+id/file_listView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/edit_toolbar"
        android:layout_below="@id/bottom_board"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />


    <LinearLayout
        android:id="@+id/buttonLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_string" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_string" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/copy_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/edit"
            android:gravity="center"
            android:padding="5dp"
            android:text="复制"
            android:textSize="@dimen/smallTextSize" />

        <TextView
            android:id="@+id/move_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/edit"
            android:gravity="center"
            android:padding="5dp"
            android:text="移动"
            android:textSize="@dimen/smallTextSize" />

        <TextView
            android:id="@+id/del_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/edit"
            android:gravity="center"
            android:padding="5dp"
            android:text="删除"
            android:textSize="@dimen/smallTextSize" />

        <TextView
            android:id="@+id/more_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/edit"
            android:gravity="center"
            android:padding="5dp"
            android:text="更多"
            android:textSize="@dimen/smallTextSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit2_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/edit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/edit" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/edit" />

    </LinearLayout>
</RelativeLayout>
