<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_recycleItem_margin_vertical"
    android:layout_marginLeft="@dimen/main_recycleItem_margin_horizontal"
    android:layout_marginRight="@dimen/main_recycleItem_margin_horizontal"
    android:layout_marginTop="@dimen/main_recycleItem_margin_vertical"
    android:background="@drawable/item_background"
    android:padding="@dimen/main_recycleItem_padding">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="@dimen/imageViewSize"
        android:layout_height="@dimen/imageViewSize"
        android:layout_gravity="top" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/main_recycleItem_margin_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iconImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/bigTextSize" />

        <TextView
            android:id="@+id/packageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/smallTextSize" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item2_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/linearLayout1"
        android:layout_below="@id/linearLayout1"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/iconImageView"
        android:orientation="vertical" />
</RelativeLayout>




