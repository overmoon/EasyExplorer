<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tblue_subitem_selector"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/tag_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/midTextSize" />

    <TextView
        android:id="@+id/easyPath_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_recycleItem_margin_vertical"
        android:textSize="@dimen/smallTextSize" />

    <LinearLayout
        android:id="@+id/edit_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_toRightOf="@+id/linearLayout1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_imageView"
            android:layout_width="@dimen/imageViewSize_mid"
            android:layout_height="@dimen/imageViewSize_mid"
            android:src="@mipmap/edit" />

        <ImageView
            android:id="@+id/del_imageView"
            android:layout_width="@dimen/imageViewSize_mid"
            android:layout_height="@dimen/imageViewSize_mid"
            android:src="@mipmap/del" />

    </LinearLayout>

</LinearLayout>


